extends ./template.pug

block tabs
	li
		a(href="/") Faucet
	li.is-active
		a(href="/cooldowns") Cooldowns
	li
		a(href="/about") About

block body
	nav.level.is-mobile
		div.level-item.has-text-centered
			div
				p.heading Address(es) known
				p.title #{status.addressesKnown}
		div.level-item.has-text-centered
			div
				p.heading Total #{locals.ticker} sent
				p.title #{status.totalCoinsSent}

	if cooldowns.length
		.table-container.is-centered
			table.table.is-fullwidth
				thead
					tr
						th Address
						th Runs out

				tbody
					each cooldown, i in cooldowns
						tr
							td.is-family-code #{cooldown.address}
							td #{cooldown.lastTime}

	else
		h2.subtitle There's nothing here...

